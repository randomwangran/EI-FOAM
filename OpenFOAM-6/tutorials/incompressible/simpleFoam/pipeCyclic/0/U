FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    //-wr    velocity in x direction is the same: 1

    //-wr    <2019-07-04 Thu>
    //-wr    how the swirl inlet mathmatically descript is unknow to me.
  
    inlet
    {
        type            codedFixedValue;
        value           uniform (1 0 0);
        name            swirl;
        code            #{
            const vector axis(1, 0, 0);

            vectorField v(2.0*this->patch().Cf() ^ axis);
            v.replace(vector::X, 1.0);
            operator==(v);
        #};
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform (1 0 0);
        value           uniform (1 0 0);
    }
    side1
    {
        type            cyclicAMI;
        value           uniform (1 0 0);
    }
    side2
    {
        type            cyclicAMI;
        value           uniform (1 0 0);
    }
    walls
    {
        type            noSlip;
    }
}


